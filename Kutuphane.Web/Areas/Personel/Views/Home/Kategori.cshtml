<h2 style="color:black">Kitaplar Kategorileri</h2>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kategoriModal">
    Yeni Kategori Ekle
</button>

<div id="divKitapKategori"></div>




<div class="modal fade" id="kategoriModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Kitap Kategori Bilgileri</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <label for="inputKitapKategoriAd" class="form-label">Kitap Kategori Adı</label>
                <input type="text" id="inputKitapKategoriAd" class="form-control">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                <button type="button" class="btn btn-primary" onclick="KategoriKaydet()">Kaydet</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/personel/kategori.js" asp-append-version="true"></script>
