<h2 style="color:black">Kitaplar</h2>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kitapModal">
    Yeni Kitap Ekle
</button>

<div id="divKitaplar"></div>




<div class="modal fade" id="kitapModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Kitap Bilgileri</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <label for="inputKitapAd" class="form-label">Kitap Adı</label>
                <input type="text" id="inputKitapAd" class="form-control">

                <label for="inputYazarAd" class="form-label">Yazar Adı</label>
                <input type="text" id="inputYazarAd" class="form-control">

                <label for="inputYayinYili" class="form-label">Yayın Yılı</label>
                <input type="text" id="inputYayinYili" class="form-control">

                <label for="inputISBN" class="form-label">ISBN</label>
                <input type="text" id="inputISBN" class="form-control">

                <label>Kitap Türü Seç</label>
                <select class="form-control" id="selectKitapKategoriId"></select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                <button type="button" class="btn btn-primary" onclick="KitapKaydet()">Kaydet</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/personel/kitap.js" asp-append-version="true"></script>
