	</div>
</div>
<script>
	$('.select2').select2();
</script>
<div class="modal fade" id="duzenleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="exampleModalLabel">Teslim Et</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

				<label for="inputKitapAdDuzenle" class="form-label">Kitap Adı</label>
				<input type="text" id="inputKitapAdDuzenle" class="form-control">

				<label for="inputKullaniciAdDuzenle" class="form-label">Kullanıcı Adı</label>
				<input type="text" id="inputKullaniciAdDuzenle" class="form-control">

				<label for="inputKiralamaTarihDuzenle" class="form-label">Kiralama Tarihi</label>
				<input type="text" id="inputKiralamaTarihDuzenle" class="form-control">

				<label for="inputBitisTarihDuzenle" class="form-label">Bitiş Tarihi</label>
				<input type="text" id="inputBitisTarihDuzenle" class="form-control">

				<label for="inputGeriVerisTarihDuzenle" class="form-label">Geri Veriş Tarihi</label>
				<input type="text" id="inputGeriVerisTarihDuzenle" class="form-control">
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
				<button type="button" class="btn btn-primary" onclick="KiralamaKaydet2()">Teslim Et</button>
			</div>
		</div>
	</div>
</div>
<h2>Tüm Kiralamalar</h2>
<script>
	$(document).ready(function () {
		$("#myInput").on("keyup", function () {
			var value = $(this).val().toLowerCase();
			$("#myTable tr").filter(function () {
				$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
			});
		});
	});
</script>
<input id="myInput" type="text" placeholder="Kiralama Ara...">
